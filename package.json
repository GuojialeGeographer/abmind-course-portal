{
  "name": "abmind-course-portal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:static": "next build && next export",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "analyze": "ANALYZE=true next build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "validate:content": "node scripts/validate-content.js",
    "validate:accessibility": "node scripts/accessibility-test.js",
    "validate:quality": "node scripts/content-quality.js",
    "validate:all": "npm run validate:content && npm run validate:accessibility && npm run validate:quality",
    "deploy:vercel": "node scripts/deploy.js vercel",
    "deploy:vercel-prod": "node scripts/deploy.js vercel-prod",
    "deploy:github-pages": "node scripts/deploy.js github-pages",
    "monitor:check": "node scripts/monitor.js check",
    "monitor:report": "node scripts/monitor.js report",
    "monitor:start": "node scripts/monitor.js monitor"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "clsx": "^2.1.1",
    "fuse.js": "^7.1.0",
    "js-yaml": "^4.1.1",
    "next": "16.0.8",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^4.0.15",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.8",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "fast-check": "^4.4.0",
    "jsdom": "^27.3.0",
    "prettier": "^3.7.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.15"
  }
}
